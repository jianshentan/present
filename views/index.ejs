<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='/css/style.css' />
  </head>
  <body>
    <h1> present :) </h1>

    <% if( typeof room == 'undefined') { %>
    <input class="room" type="text" placeholder="Enter Room Name" >
    <% } else { %>
    <input class="room" type="text" placeholder="" value='<%= room %>'>
    <% } %>

    <br>
    <input type="submit" class="create_room" value="Create Room">
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script>
      $( ".create_room" ).click( function() {
        var input = $( ".room" ).val();
        window.location.href = "/add/"+input;
      });
    </script>
  </body>
</html>
